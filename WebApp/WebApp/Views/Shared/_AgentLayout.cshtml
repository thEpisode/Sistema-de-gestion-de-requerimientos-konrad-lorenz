    <script>
        var User = null;
        var Theme = null;

        (function () {
            /// Check if exist user in session storage
            if (sessionStorage.getItem("user") !== null) {
                // Getting theme
                getTheme();

                User = JSON.parse(sessionStorage.user);

                /// Settings
                // Get Profile image
                getProfileImage(User.ProfileImageName);
                // Change name
                $(".username").text(User.Name + " " + User.Lastname);
            }
            else {
                window.location.assign('@Url.Action("Index", "Home")');
            }
        })();

        /// Change the default avatar to stored photo
        $('#avatar-preload').on('load', function () {
            var img = $("#avatar-preload").clone();
            $("#profile-ava").append(img);
            $("#avatar").remove();
            $("#avatar-preload:eq(0)").attr("id", "avatar");
            $("#avatar").show();
        });

        function logOut() {
            sessionStorage.removeItem("user");
            window.location.assign('@Url.Action("Index", "Home")');
        }

        function getProfileImage(fileName) {
            $("#avatar-preload").attr("src", "@Url.Action("GetProfilePhoto", "Agent")" + "?fileName=" + fileName)
        }

        function getTheme() {
            $.ajax({
                url: "@Url.Action("GetTheme", "UI")",
                type: "GET",
                success: function (data) {
                    console.log("Theme:")
                    console.log(data);
                    
                    setTheme(data);
                },
                error: function (data) {
                    console.log(data);
                    switch (data.status) {
                        case 404:
                            alert(JSON.parse(data.responseText).Message);
                            break;
                        default:
                            alert('Ocurrió un imprevisto, para más detalles revisa la consola de desarrolladores');
                            break;
                    }
                }
            });
        }

        function setTheme(theme) {
            Theme = theme;

            // Set header theme
            $('header').removeClass();
            $('header').addClass('header');
            $('header').addClass(theme.HeaderColor);

            $('#sidebar').removeClass();
            $('#sidebar').addClass(theme.SidebarColor);
        }

        /// Used for get values from Query String
        /// http://stackoverflow.com/questions/979975/how-to-get-the-value-from-the-url-parameter#answer-979995
        var QueryString = function () {
            // This function is anonymous, is executed immediately and 
            // the return value is assigned to QueryString!
            var query_string = {};
            var query = window.location.search.substring(1);
            var vars = query.split("&");
            for (var i = 0; i < vars.length; i++) {
                var pair = vars[i].split("=");
                // If first entry with this name
                if (typeof query_string[pair[0]] === "undefined") {
                    query_string[pair[0]] = decodeURIComponent(pair[1]);
                    // If second entry with this name
                } else if (typeof query_string[pair[0]] === "string") {
                    var arr = [query_string[pair[0]], decodeURIComponent(pair[1])];
                    query_string[pair[0]] = arr;
                    // If third or later entry with this name
                } else {
                    query_string[pair[0]].push(decodeURIComponent(pair[1]));
                }
            }
            return query_string;
        };
    </script>

