<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Creative - Bootstrap 3 Responsive Admin Template">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="~/Content/Admin/img/favicon.png">

    <title>@ViewBag.Title | Requerimientos para la pequeña empresa</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/Content/Admin/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/Content/Admin/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Content/Admin/css/style.css" rel="stylesheet">
    <link href="~/Content/Admin/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 -->
    <!--[if lt IE 9]>
      <script src="~/Content/Admin/js/html5shiv.js"></script>
      <script src="~/Content/Admin/js/respond.min.js"></script>
      <script src="~/Content/Admin/js/lte-ie7.js"></script>
    <![endif]-->
</head>

<body>
    <!-- container section start -->
    <section id="container" class="">
        <!--header start-->

        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Ocultar navegación" data-placement="bottom"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a href="index.html" class="logo">Requerimientos <span class="lite">de la pequeña empresa</span></a>
            <!--logo end-->

            

            <div class="top-nav notification-row">
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">

                    
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="profile-ava" id="profile-ava">
                                <img alt="" width="30" id="avatar" src="~/Content/Admin/img/avatar1_small.jpg">
                                <img alt="" width="30" style="display:none;" id="avatar-preload"/>
                            </span>
                            <span class="username"></span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li class="eborder-top">
                                <a href="@Url.Action("Index", "Agent")"><i class="icon_profile"></i> Mi perfil</a>
                            </li>
                            
                            <li>
                                <a href="javascript: logOut()"><i class="icon_key_alt"></i> Salir</a>
                            </li>
                           
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!-- notificatoin dropdown end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="">
                        <a class="" href="@Url.Action("Index", "Agent")">
                            <i class="icon_house_alt"></i>
                            <span>Inicio</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_pens"></i>
                            <span>Requerimientos</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a class="" href="@Url.Action("Index", "Requirement")">Todos</a></li>
                            <li><a class="" href="@Url.Action("MyRequirements", "Requirement")">Mis requerimientos</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_document_alt"></i>
                            <span>Formulario</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a class="" href="@Url.Action("GetForm", "Requirement")">Modificar formulario</a></li>
                        </ul>
                    </li>
                    
                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_group"></i>
                            <span>Agentes</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a class="" href="@Url.Action("All", "Agent")">Todos los agentes</a></li>
                            <li><a class="" href="@Url.Action("Create", "Agent")">Agregar agente</a></li>
                            <li><a class="" href="@Url.Action("Edit", "Agent")">Modificar agente</a></li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;" class="">
                            <i class="icon_lightbulb"></i>
                            <span>Colores</span>
                            <span class="menu-arrow arrow_carrot-right"></span>
                        </a>
                        <ul class="sub">
                            <li><a class="" href="@Url.Action("Index", "UI")">Modificar colores</a></li>
                        </ul>
                    </li>

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                
                <!-- page start-->
                @RenderBody()
                <!-- page end-->
            </section>
        </section>
        <!--main content end-->
    </section>
    <!-- container section end -->
    <!-- javascripts -->
    <script src="~/Content/Admin/js/jquery.js"></script>
    <script src="~/Content/Admin/js/bootstrap.min.js"></script>
    <!-- nice scroll -->
    <script src="~/Content/Admin/js/jquery.scrollTo.min.js"></script>
    <script src="~/Content/Admin/js/jquery.nicescroll.js" type="text/javascript"></script><!--custome script for all page-->
    <script src="~/Content/Admin/js/scripts.js"></script>

    <script>
        var User = null;
        (function () {
            /// Check if exist user in session storage
            if (sessionStorage.getItem("user") !== null) {
                User = JSON.parse(sessionStorage.user);

                /// Settings
                // Get Profile image
                getProfileImage(User.ProfileImageName);
                // Change name
                $(".username").text(User.Name + " " + User.Lastname);
            }
            else {
                window.location.assign('@Url.Action("Index", "Home")');
            }
        })();

        /// Change the default avatar to stored photo
        $('#avatar-preload').on('load', function () {
            var img = $("#avatar-preload").clone();
            $("#profile-ava").append(img);
            $("#avatar").remove();
            $("#avatar-preload:eq(0)").attr("id", "avatar");
            $("#avatar").show();
        });

        function logOut() {
            sessionStorage.removeItem("user");
            window.location.assign('@Url.Action("Index", "Home")');
        }

        function getProfileImage(fileName) {
            $("#avatar-preload").attr("src", "@Url.Action("GetProfilePhoto", "Agent")" + "?fileName=" + fileName)
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
